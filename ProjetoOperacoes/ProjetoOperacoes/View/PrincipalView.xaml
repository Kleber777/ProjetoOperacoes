<UserControl x:Class="ProjetoOperacoes.View.PrincipalView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local2="clr-namespace:ProjetoOperacoes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!--USADO NOS STYLES PARA ALTURA-->

        <!--USADO NOS STYLES PARA LARGURA-->
        <local2:ResponsiveApplicationConverter x:Key="Teste"/>

        <!--#region Medidas para o Menu de Produtos-->

        <!--TextBox Menu Produto-->
        <Style TargetType="TextBox" x:Key="TextBoxMenuProduto">

            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="190"/>

            <Style.Triggers>

                <!--VALOR PARA RESOLUÇÃO 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Height" Value="30"/>
                    <Setter Property="Width" Value="355"/>
                    <!--<Setter Property="Width" Value="220"/>-->
                </DataTrigger>

            </Style.Triggers>
        </Style>

        <!--BOTÕES DO MENU DE PRODUTO-->
        <Style x:Key="BotaoMenuProdutos" TargetType="Button">
            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->

            <Setter Property="Width"  Value="98"/>
            <Setter Property="Height"  Value="98"/>
            <Setter Property="Background" Value="#F1F0F7"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>

                <!--<Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>-->

                <!--VALOR PARA RESOLUÇÃO 1152X846-->
                <!--
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">

                    <Setter Property="Width"  Value="110"/>
                    <Setter Property="Height" Value="110"/>
                    <Setter Property="Background" Value="#F1F0F7"/>
                    <Setter Property="BorderThickness" Value="0"/>

                </DataTrigger>


                -->
                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">

                    <Setter Property="Width"  Value="124"/>
                    <Setter Property="Height"  Value="124"/>
                    <Setter Property="Background" Value="#F1F0F7"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </DataTrigger>


                <!--VALOR PARA RESOLUÇÃO 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <Setter Property="Width"   Value="135"/>
                    <Setter Property="Height"  Value="135"/>
                    <Setter Property="Background" Value="#F1F0F7"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </DataTrigger>


                <!--VALOR PARA RESOLUÇÃO > 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">

                    <Setter Property="Width"   Value="150"/>
                    <Setter Property="Height"  Value="150"/>
                    <Setter Property="Background" Value="#F1F0F7"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Arrow"/>

                </DataTrigger>

            </Style.Triggers>
        </Style>

        <!--TAMANHO DA BORDA DO BOTÃO-->
        <Style x:Key="BordaBotao" TargetType="Border">
            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->
            <Setter Property="Background"  Value="{Binding HexColor}"/>
            <Setter Property="Height" Value="95"/>
            <Setter Property="Width" Value="95"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{Binding HexColor}"/>

            <Style.Triggers>
                <!--VALOR PARA RESOLUÇÃO 1152X846-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="Width"  Value="100"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="{Binding HexColor}"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="120"/>
                    <Setter Property="Width"  Value="120"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="{Binding HexColor}"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="130"/>
                    <Setter Property="Width"  Value="131"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="CornerRadius" Value="7"/>
                    <Setter Property="BorderBrush" Value="{Binding HexColor}"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO > 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="140"/>
                    <Setter Property="Width"  Value="140"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="{Binding HexColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--TAMANHO BULLET DECORATOR-->
        <Style x:Key="BulletDecoratorButton" TargetType="BulletDecorator">


            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->

            <Setter Property="Background"  Value="{Binding HexColor}"/>
            <Setter Property="Height" Value="2"/>

            <Style.Triggers>

                <!--VALOR PARA RESOLUÇÃO 1152X846-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">

                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="2"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--TAMANHO BORDA IMAGEM-->
        <Style x:Key="BordaImagemButton" TargetType="Border">


            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->

            <Setter Property="Background"  Value="{Binding HexColor}"/>
            <Setter Property="Height" Value="60"/>

            <Style.Triggers>

                <!--VALOR PARA RESOLUÇÃO 1152X846-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal,   
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">

                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="60"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="70"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="70"/>

                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO > 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">
                    <Setter Property="Background"  Value="{Binding HexColor}"/>
                    <Setter Property="Height" Value="80"/>

                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--TAMANHO IMAGEM-->
        <Style x:Key="ImagemButton" TargetType="Image">


            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->

            <Setter Property="Source"  Value="{Binding Icon}"/>
            <Setter Property="Height" Value="{Binding AlturaIcon}"/>
            <Setter Property="Width" Value="100"/>

            <Style.Triggers>

                <!--VALOR PARA RESOLUÇÃO 1152X846-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">

                    <Setter Property="Source"  Value="{Binding Icon}"/>
                    <Setter Property="Height" Value="{Binding AlturaIcon}"/>
                    <Setter Property="Width" Value="100"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">

                    <Setter Property="Source"  Value="{Binding Icon}"/>
                    <Setter Property="Height" Value="{Binding AlturaIcon}"/>
                    <Setter Property="Width" Value="125"/>
                </DataTrigger>


                <!--VALOR PARA RESOLUÇÃO 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <Setter Property="Source"  Value="{Binding Icon}"/>
                    <Setter Property="Height" Value="{Binding AlturaIcon}"/>
                    <Setter Property="Width" Value="125"/>

                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO > 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">

                    <Setter Property="Source"  Value="{Binding Icon}"/>
                    <Setter Property="Height" Value="{Binding AlturaIcon}"/>
                    <Setter Property="Width" Value="140"/>

                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!--TAMANHO DA FONTE-->
        <Style x:Key="FontButton" TargetType="TextBlock">


            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->

            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <!--<Setter Property="Foreground" Value="{Binding CorLetra}"/>-->
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>

            <Style.Triggers>

                <!--VALOR PARA RESOLUÇÃO 1152X846-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1024}"
                                               Value="True">

                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="Foreground" Value="{Binding CorLetra}"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </DataTrigger>


                <!--VALOR PARA RESOLUÇÃO 1280XTantosOutros-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1152}"
                                               Value="True">

                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Foreground" Value="{Binding CorLetra}"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </DataTrigger>


                <!--VALOR PARA RESOLUÇÃO 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Foreground" Value="{Binding CorLetra}"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </DataTrigger>

                <!--VALOR PARA RESOLUÇÃO > 1366X768-->

                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">

                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Foreground" Value="{Binding CorLetra}"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </DataTrigger>

            </Style.Triggers>
        </Style>
        <!--#endregion-->

        <!--BOTÕES CANCELAR E PAGAR DO PAINEL DO CARRINHO-->
        <Style x:Key="BotaoPainelCarrinho" TargetType="Button">

            <!--VALOR PADRÃO PARA RESOLUÇÃO 1024X768-->
            <Setter Property="Height"  Value="80"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width"  Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <!--VALOR PADRÃO PARA RESOLUÇÃO  1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1280}"
                                               Value="True">

                    <!--<Setter Property="Height"  Value="80"/>-->
                    <!--<Setter Property="FontSize" Value="16"/>-->
                    <Setter Property="Width"  Value="Auto"/>
                </DataTrigger>

                <!--VALOR PADRÃO PARA RESOLUÇÃO > 1366X768-->
                <DataTrigger Binding="{Binding Path=ActualWidth, 
                                               ElementName=GridPrincipal, 
                                               Converter={StaticResource Teste},
                                               ConverterParameter=1366}"
                                               Value="True">

                    <Setter Property="Height"  Value="80"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Width"  Value="180"/>
                </DataTrigger>
            </Style.Triggers>

        </Style>

    </UserControl.Resources>

    <Grid x:Name="GridPrincipal" Background="#F1F0F7">

        <!--Definição das colunas-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="760"/>
            <ColumnDefinition Width="2*"/>
            <!--<ColumnDefinition Width="100"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.1*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <!--MENU LOGO NEXT-MENU LOGO CLIENTE-->

        <StackPanel Background="White" Grid.ColumnSpan="2"></StackPanel>

        <!--MENU PRODUTOS-->
        <Grid Grid.Column="0" Grid.Row="1" Background="#F1F0F7" Margin="5, 10, 5, 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <StackPanel Background="#F1F0F7" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">

                <Button Width="40" Margin="5,0,0,0" CommandParameter="{Binding}" Command="{Binding InsertNewAccount}" x:Name="btnVoltarLista"  BorderBrush="White" Background="White">
                    <TextBlock Text="N"/>
                </Button>

                <Button  Margin="5,0,0,0" Height="40"  Width="40" BorderBrush="White" Background="White">
                    <TextBlock Text="E"/>
                </Button>

                <Button Margin="5,0,0,0" Width="40" Height="40" BorderBrush="Transparent" Background="White" BorderThickness="0">
                    <TextBlock Text="R"/>
                </Button>
            </StackPanel>

            <StackPanel Margin="0, 0, 5, 0" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" Orientation="Horizontal">
                <Border BorderBrush="#A7C6FA" BorderThickness="2" CornerRadius="3" Height="40" Background="White" Width="370">
                    <StackPanel Orientation="Horizontal">
                        <TextBox Background="White"  Height="40" Style="{StaticResource TextBoxMenuProduto}" VerticalContentAlignment="Center" TextChanged="txtbSearch_TextChanged" x:Name="txtbSearch"></TextBox>
                        <Image Source="..\..\Icons\icon_search.png" Width="40" Height="15"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!--ACCOUNTLIST-->
            <Grid Grid.Row="1" Grid.RowSpan="2" Background="#F1F0F7" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ScrollViewer x:Name="sV1" VerticalScrollBarVisibility="Hidden">
                    <ItemsControl Background="#F1F0F7" x:Name="listaProdutoView" ItemsSource="{Binding ListaContas}" HorizontalAlignment="Left">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Background="#F1F0F7" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                                    <Button  Style="{StaticResource BotaoMenuProdutos}" Command="{Binding ElementName=listaProdutoView,  Path=DataContext.IrParaTipoConta}" CommandParameter="{Binding}" Click="AtualizarViewModel_Click">
                                        <Border Style="{StaticResource BordaBotao}">
                                            <StackPanel>
                                                <BulletDecorator Style="{StaticResource BulletDecoratorButton}"/>
                                                <Border Style="{StaticResource BordaImagemButton}">
                                                    <Image Style="{StaticResource ImagemButton}"/>
                                                </Border>
                                                <StackPanel Margin="0, 15, 0, 0">
                                                    <!--<TextBlock Style="{StaticResource FontButton}" Text="{Binding TotalValue}" />-->
                                                    <TextBlock Style="{StaticResource FontButton}" Text="{Binding Amount, StringFormat=N2, ConverterCulture=pt-br}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            <!--<RepeatButton Grid.ColumnSpan="2" Grid.Row="2" Click="DescerListaProduto_Click" Height="35" Grid.Column="0" FontFamily="Segoe MDL2 Assets" FontSize="26" Background="White" BorderBrush="White" Content="&#xE70D;"/>-->
        </Grid>

        <!--PAINEL DO CARRINHO-->
        <Grid  Grid.Column="1" Grid.Row="1" Background="White" Margin="5, 10, 5, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--CONTENT TIPOS CONTAS-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding DadosConta}"/>
                <ListView Grid.Row="1" Grid.ColumnSpan="2" x:Name="lstListaTiposContas" ItemsSource="{Binding ListaTiposContas}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding ElementName=lstListaTiposContas,  Path=DataContext.IrParaAplicacoes}" CommandParameter="{Binding .}" HorizontalAlignment="Center" Width="750" HorizontalContentAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding NameAccountType}"/>
                                    <TextBlock Text=" "/>
                                    <TextBlock Text="{Binding Balance}"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!--CONTENT BOTÕES-->
            <Grid Grid.Row="1" Background="White" Margin="15, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Background="White" Orientation="Horizontal" HorizontalAlignment="Center" Grid.ColumnSpan="2">
                    <TextBlock Foreground="Black" HorizontalAlignment="Center" Text="{Binding NameAccountType}" Margin="0, 0, 10, 0"/>
                    <TextBlock Foreground="Black" HorizontalAlignment="Center" Text="{Binding Balance}" Margin="0, 0, 10, 0"/>
                    <Button Foreground="Black" HorizontalAlignment="Center" Width="50" Command="{Binding EditarValorTipoConta}" CommandParameter="{Binding Balance}"/>
                </StackPanel>
                
            </Grid>

            <!--CONTENT APLICAÇÕES CONSOLIDADAS-->
            <Border Grid.Row="2" Margin="0, 10, 0, 0" BorderBrush="Gray" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="APLICAÇÕES CONSOLIDADAS"/>
                        <Button Grid.Column="2" Content="Informação"/>
                        <Button Grid.Column="4" Content="Novo"/>
                        <Button Grid.Column="6" Content="Editar"/>
                        <Button Grid.Column="8" Content="Remover"/>
                    </Grid>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="DESCRIÇÃO" Width="400"/>
                        <TextBlock Text="Installments" Width="100"/>
                        <TextBlock Text="VALOR INDIVIDUAL" Width="100"/>
                        <TextBlock Text="VALOR TOTAL" Width="100" HorizontalAlignment="Right"  Margin="20, 0, 0, 0"/>
                    </StackPanel>

                    <ListView Grid.Row="2" x:Name="lstAplicacaoConsolidada" ItemsSource="{Binding ListaConsolidada}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="400"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Installments}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding IndividualValue}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalValue}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock Grid.Row="3" Text="Total Aplicações Futuras Consolidadas"/>
                    <TextBlock Grid.Row="3" Text="{Binding TotalComFutureApplicationConsolidada}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!--CONTENT APLICAÇÕES FUTURAS-->
            <Border  Grid.Row="3" Margin="0, 10, 0, 0" BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="APLICAÇÕES FUTURAS"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="DESCRIÇÃO" Width="400"/>
                        <TextBlock Text="Installments" Width="100"/>
                        <TextBlock Text="VALOR INDIVIDUAL" Width="100"/>
                        <TextBlock Text="VALOR TOTAL" Width="100" HorizontalAlignment="Right"  Margin="20, 0, 0, 0"/>
                    </StackPanel>
                    <ListView Grid.Row="2" x:Name="lstFutureApplication" ItemsSource="{Binding ListaFutura}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="400"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Installments}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding IndividualValue}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalValue}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock Grid.Row="3" Text="Total Aplicações Futura"/>
                    <TextBlock Grid.Row="3" Text="{Binding TotalComFutureApplication}" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!--CONTENT APLICAÇÕES EM ANDAMENTO-->
            <Border Grid.Row="4" Margin="0, 10, 0, 0" BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="APLICAÇÕES EM ANDAMENTO"/>
                    <ListView Grid.Row="1" x:Name="lstAccomplishedApplicationInputModel" ItemsSource="{Binding ListaEmAndamento}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="400"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Installments}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding IndividualValue}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalValue}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--CONTENT APLICAÇÕES REALIZADAS-->
            <Border Grid.Row="5" Margin="0, 10, 0, 0" BorderThickness="2" BorderBrush="Black">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="APLICAÇÕES REALIZADAS"/>
                    <ListView Grid.Row="1" x:Name="lstAccomplishedApplicationInputModels" ItemsSource="{Binding ListaRealizada}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="400"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Description}"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Installments}"/>
                                    <TextBlock Grid.Column="2" Text="{Binding IndividualValue}"/>
                                    <TextBlock Grid.Column="3" Text="{Binding TotalValue}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--CONTENT TOTAIS-->
            <Border Grid.Row="6" Margin="0, 10, 0, 0" Width="900" BorderThickness="2" BorderBrush="Black">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="TOTAIS"/>
                    <StackPanel Grid.Row="1" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="TOTAL ATUAL: "/>
                            <TextBlock HorizontalAlignment="Center" Grid.Column="1" Text="{Binding TotalAtual, StringFormat=N2, ConverterCulture=pt-br}"/>

                            <TextBlock Grid.Row="1" Text="Total com aplicação futura consolidada"/>
                            <TextBlock HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" Text="{Binding TotalComFutureApplicationConsolidada, StringFormat=N2, ConverterCulture=pt-br}"/>

                            <TextBlock Grid.Row="2" Text="TOTAL COM APLICAÇÃO FUTURA"/>
                            <TextBlock HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" Text="{Binding TotalComFutureApplication, StringFormat=N2, ConverterCulture=pt-br}"/>
                        </Grid>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="1" Text="VALORES FINAIS"/>
                    <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="FINAL ATUAL: "/>
                            <TextBlock Grid.Column="1" Text="{Binding FinalTotalAtual, StringFormat=N2, ConverterCulture=pt-br}"/>

                            <TextBlock Grid.Row="1" Text="Final com aplicação futura consolidada"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FinalTotalComFutureApplicationConsolidada, StringFormat=N2, ConverterCulture=pt-br}"/>

                            <TextBlock Grid.Row="2" Text="FINAL COM APLICAÇÃO FUTURA"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FinalTotalComFutureApplication, StringFormat=N2, ConverterCulture=pt-br}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
